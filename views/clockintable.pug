doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title List of Sitter - Daystar Daycare
    link(href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css", rel="stylesheet")
    link(rel="stylesheet", href="styles.css")
  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      a.navbar-brand(href="#") Daystar Daycare
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        ul.navbar-nav.ml-auto
          li.nav-item.active
            a.nav-link(href="#") Home
          li.nav-item
            a.nav-link(href="#") About
          li.nav-item
            a.nav-link(href="#") Contact

    .container.mt-4
      h2 List of Babies
      table.table.table-striped
        thead
          tr
            th Baby Name
            th Location
            th Gender
            th Person Name
            th Time of Arrival
            th Service Type
            th Baby Number
            th Contact
            th Status
            th clockout
            th Update
            th Delete

        tbody
          if babies.length
            each baby in babies
              tr
                td= baby.Name
                td= baby.location
                td= baby.gender
                td= baby.personName
                td= baby.timeOfArrival
                td= baby.serviceType
                td= baby.babyNumber
                td= baby.contact
                td= baby.status
                td
                  a.btn.btn-secondary.btn-sm(href="/Clockoutbaby/" + baby._id) Clock out
                td
                  a(href="babyUpdate/" + baby._id) Update 
                td
                  form(method="POST", action="/delete")
                    input(type="hidden", name="id", value=baby._id)
                    button.btn.btn-danger.btn-sm(type="submit") Delete

    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js")
