doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Daystar Daycare Registration Form
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='babies registration.css')
.container.mt-5
  h2.text-center.mb-4 Babies Registration Form
  form#babyRegistrationForm.needs-validation(novalidate='')
    main
      .mb-3
        label.form-label(for='Julie') Name of the Baby
        input#Julie.form-control(type='text' required='')
      .mb-3
        label.form-label(for='gender') Gender
        select#gender.form-select(required='')
          option(value='') Choose...
          option Male
          option Female
      .mb-3
        label.form-label(for='8yrs') Age
        input#8yr.form-control(type='number' required='')
      .mb-3
        label.form-label(for='kabalagala') Location
        input#kabalagala.form-control(type='text' required='')
      .mb-3
        label.form-label(for='Jane') Name of the Person Who Brought the Baby
        input#Jane.form-control(type='text' required='')
      .mb-3
        label.form-label(for='09:30') Time of Arrival
        input.form-control(type='time' id='09:30' required='')
      .mb-3
        label.form-label(for='Loyce') Parents&apos; Names
        input#Loyce.form-control(type='text' required='')
      .mb-3
        label.form-label(for='200,000') Fee in UGX
        input#2000000.form-control(type='number' required='')
      .mb-3
        label.form-label(for='Full-Day') Period of Stay
        input#Full-Day.form-control(type='text' required='')
      .mb-3
        label.form-label(for='002') Baby Number
        input#002.form-control(type='text' required='')
      .mb-3
        label.form-label(for='Barbra') Name of the Person Taking the Baby
        input#barbra.form-control(type='text' required='')
      .mb-3
        label.form-label(for='5:00') Time
        input.form-control(type='time' id='5:00' required='')
      button.btn.btn-primary(type='submit') Register
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
script(src='babies registration.js')
