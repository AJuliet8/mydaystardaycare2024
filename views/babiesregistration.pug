doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Daystar Daycare Registration Form
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet', href='./css/babyreg.css')
  body
    .container.mt-5
      h2.text-center.mb-4 Babies Registration Form
      form#registrationForm(action='/babiesreg', method='POST')
        main
          .mb-3
            label.form-label(for='babyName') Name of the Baby
            input#babyName.form-control(type='text', name='babyName', required='')
          .mb-3
            label.form-label(for='gender') Gender
            select#gender.form-select(name='gender', required='')
              option(value='', selected disabled) Choose...
              option(value='male') Male
              option(value='female') Female
          .mb-3
            label.form-label(for='age') Age
            input#age.form-control(type='number', name='age', required='')
          .mb-3
            label.form-label(for='location') Location
            input#location.form-control(type='text', name='location', required='')
          .mb-3
            label.form-label(for='personBrought') Name of the Person Who Brought the Baby
            input#personBrought.form-control(type='text', name='personBrought', required='')
          .mb-3
            label.form-label(for='arrivalTime') Time of Arrival
            input#arrivalTime.form-control(type='time', name='arrivalTime', required='')
          .mb-3
            label.form-label(for='parentsNames') Parents' Names
            input#parentsNames.form-control(type='text', name='parentsNames', required='')
          .mb-3
            label.form-label(for='fee') Fee in UGX
            input#fee.form-control(type='number', name='fee', required='')
          .mb-3
            label.form-label(for='periodOfStay') Period of Stay
            input#periodOfStay.form-control(type='text', name='periodOfStay', required='')
          .mb-3
            label.form-label(for='babyNumber') Baby Number
            input#babyNumber.form-control(type='text', name='babyNumber', required='')
          .mb-3
            label.form-label(for='personTaking') Name of the Person Taking the Baby
            input#personTaking.form-control(type='text', name='personTaking', required='')
          .mb-3
            label.form-label(for='departureTime') Time
            input#departureTime.form-control(type='time', name='departureTime', required='')
          button.btn.btn-primary(type='submit') Register
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
    script(src='babies-registration.js')
