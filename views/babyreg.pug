doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Daystar Daycare Registration
  // Bootstrap CSS
  link(href='https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css' rel='stylesheet')
  // Custom styles
  
   
// Navbar
nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
  a.navbar-brand(href='#') Daystar Daycare
  button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #navbarNav.collapse.navbar-collapse
    ul.navbar-nav.ml-auto
      li.nav-item
        a.nav-link(href='#') Home
      li.nav-item
        a.nav-link(href='#') About Us
      li.nav-item
        a.nav-link(href='#') Contact
// Registration Form
.container
  h2.mt-4 Daystar Daycare Registration
  form
    // Child's Information
    .form-group
      label(for='childName') Child&apos;s Name
      input#childName.form-control(type='text' placeholder="Enter child's name" required='')
    .form-group
      label(for='childAge') Child&apos;s Age
      input#childAge.form-control(type='number' placeholder="Enter child's age" required='')
    // Medical Information
    h4.mt-4 Medical Information
    .form-group
      label(for='medicalHistory') Medical History
      textarea#medicalHistory.form-control(rows='3' placeholder='Enter medical history')
    .form-group
      label(for='emergencyContact') Emergency Contact
      input#emergencyContact.form-control(type='text' placeholder='Enter emergency contact' required='')
    // Document Upload
    h4.mt-4 Document Upload
    .custom-file
      input#documentUpload.custom-file-input(type='file' required='')
      label.custom-file-label(for='documentUpload') Choose file
    // Payment Information
    h4.mt-4 Payment
    .form-group
      label(for='paymentMethod') Payment Method
      select#paymentMethod.form-control(required='')
        option(value='') Select payment method
        option(value='creditCard') halfday 150000
        option(value='paypal') Full-Day 200000
    .form-group
      label(for='cardNumber') Card Number
      input#cardNumber.form-control(type='text' placeholder='Enter card number' required='')
    button.btn.btn-primary(type='submit') Submit
// Footer
footer.footer.mt-4
  .container.text-center
    span.text-muted &copy; 2024 Daystar Daycare. All rights reserved.
// Bootstrap JS and dependencies
script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js')
script(src='https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js')
script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js')
